{% extends 'base.html.twig' %}

{% block body %}
    <div class="ligneFormulaire">
        <h5>Nom de la sortie : </h5>
        {{ sorties.nom }}</div>
    <div class="ligneFormulaire">
        <h5>Date et heure de la sortie : </h5>
        {{ sorties.dateHeureDebut | date('d/m/Y H:i') }}
    </div>
    <div class="ligneFormulaire">
        <h5>Campus : </h5>
        {{ sorties.campus.nom }}
    </div>
    <div class="ligneFormulaire">
        <h5>Lieu :</h5>
        {{ sorties.lieu.nom }}, {{ sorties.lieu.rue }},
        {{ sorties.lieu.ville.codePostal }},{{ sorties.lieu.ville.nom }}
    </div>
    {{ form_start(sortieForm) }}
    {{ form_row(sortieForm.infosSortie, {
        'label' : "Motif : ",
        'value' : ''
    }) }}
    <button id="saveButton" onclick="">Enregistrer</button>
    {{ form_end(sortieForm) }}

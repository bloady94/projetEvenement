{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Ajouter une sortie

{% endblock %}

{% block body %}
<h1>Ajouter une sortie</h1>
{% embed 'views/form/default_form.html.twig'  with {'form' : sortieForm} %}
    {% block buttonLabel %}Publier la sortie{% endblock %}
{% endembed %}

    <label for="ville">Ville :
        <select name="nomVille">
        {% for ville in villes %}
            <option value="ville">{{ ville.nom }}</option>
        {% endfor %}
        </select>
    </label>

    <a href="{{ path('lieu_add') }}"><input type="button" value="Ajouter un lieu"></a>
    {% endblock %}